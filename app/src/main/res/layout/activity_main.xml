<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/backgroung">


    <Button
        android:id="@+id/But2"
        style="@style/ButStyle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:layout_width="wrap_content"
        style="@style/ButStyle"
        android:id="@+id/But5"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/But2"
        app:layout_constraintStart_toStartOf="@+id/But2"
        app:layout_constraintTop_toBottomOf="@+id/But2" />

    <Button
        android:id="@+id/But1"
        android:layout_width="wrap_content"
        style="@style/ButStyle"

        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/But2"
        app:layout_constraintEnd_toStartOf="@+id/But2"
        app:layout_constraintStart_toStartOf="@+id/But4"
        app:layout_constraintTop_toTopOf="@+id/But2" />

    <Button
        android:id="@+id/But3"
        style="@style/ButStyle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/But2"
        app:layout_constraintEnd_toEndOf="@+id/But6"
        app:layout_constraintStart_toEndOf="@+id/But2"
        app:layout_constraintTop_toTopOf="@+id/But2" />

    <Button
        android:id="@+id/But4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/But5"
        style="@style/ButStyle"

        app:layout_constraintEnd_toStartOf="@+id/But5"
        app:layout_constraintTop_toBottomOf="@+id/But1" />

    <Button
        android:id="@+id/But6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ButStyle"

        app:layout_constraintBottom_toBottomOf="@+id/But5"
        app:layout_constraintStart_toEndOf="@+id/But5"
        app:layout_constraintTop_toBottomOf="@+id/But3" />

    <Button
        android:id="@+id/But7"
        android:layout_width="wrap_content"
        style="@style/ButStyle"

        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/But8"
        app:layout_constraintStart_toStartOf="@+id/But4"
        app:layout_constraintTop_toBottomOf="@+id/But4" />

    <Button
        android:id="@+id/But8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ButStyle"

        app:layout_constraintEnd_toEndOf="@+id/But5"
        app:layout_constraintStart_toStartOf="@+id/But5"
        app:layout_constraintTop_toBottomOf="@+id/But5" />

    <Button
        android:id="@+id/But9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ButStyle"

        app:layout_constraintEnd_toEndOf="@+id/But6"
        app:layout_constraintStart_toEndOf="@+id/But8"
        app:layout_constraintTop_toBottomOf="@+id/But6" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/But1"
        app:layout_constraintEnd_toStartOf="@+id/But2"

        app:layout_constraintStart_toStartOf="@+id/But1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Начать заного"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/But8" />



</androidx.constraintlayout.widget.ConstraintLayout>